
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> An Error Occurred
                    </h3>
                </div>

                <div class="card-body">

                    @* Error message block *@
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Error Message:</h5>
                        <p class="mb-0">@ViewData["ErrorMessage"]</p>
                    </div>

                    @* Stack trace shown only if available (e.g. Development mode) *@
                    @if (ViewData["StackTrace"] != null)
                    {
                        <div class="card bg-light mt-3">
                            <div class="card-header">
                                <strong>Stack Trace (Development Mode Only):</strong>
                            </div>
                            <div class="card-body">
                                <pre style="
                                        max-height: 400px;
                                        overflow-y: auto;
                                        background: #f8f9fa;
                                        padding: 10px;
                                        border-radius: 5px;">
                                        @ViewData["StackTrace"]
                                </pre>
                            </div>
                        </div>
                    }

                    @* Tips section *@
                    <div class="mt-4">
                        <h5>What can you do?</h5>
                        <ul class="mb-0">
                            <li>Try refreshing the page</li>
                            <li>Go back to the previous page</li>
                            <li>Contact support if the problem continues</li>
                        </ul>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </a>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go to Home
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
