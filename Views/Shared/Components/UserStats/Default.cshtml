@model ValidationDemo.ViewComponents.UserStatisticsViewModel

<div class="user-stats-component">
    <div class="row">
        <!-- Total Users Card -->
        <div class="col-md-4">
            <div class="card text-center border-primary shadow-sm">
                <div class="card-body">
                    <i class="bi bi-people-fill text-primary" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0 text-primary">@Model.TotalUsers</h2>
                    <p class="text-muted mb-0">Total Users</p>
                </div>
            </div>
        </div>

        <!-- Active Users Card -->
        <div class="col-md-4">
            <div class="card text-center border-success shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-check-fill text-success" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0 text-success">@Model.ActiveUsers</h2>
                    <p class="text-muted mb-0">Active Users</p>
                </div>
            </div>
        </div>

        <!-- Deleted Users Card -->
        <div class="col-md-4">
            <div class="card text-center border-danger shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-x-fill text-danger" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0 text-danger">@Model.DeletedUsers</h2>
                    <p class="text-muted mb-0">Deleted Users</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-stats-component .card {
        transition: transform 0.2s;
    }

        .user-stats-component .card:hover {
            transform: translateY(-5px);
        }
</style>