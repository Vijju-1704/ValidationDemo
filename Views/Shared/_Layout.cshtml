<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - My Users</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand fw-bold fs-3" asp-controller="User" asp-action="Register">User Portal 👥</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
						</li>

						@if (Context.Session.GetString("Registered") == "true")
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="UserManagement" asp-action="List">View Users</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" asp-controller="UserManagement" asp-action="DeletedUsers">Deleted Users</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
	<footer class="border-top footer text-muted">
		<div class="container text-center py-3">
			&copy; 2025 - UserHub -User Management Application
		</div>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>