    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Fetch active users and display scrolling banner
        async function loadActiveUsers() {
            try {
                const response = await fetch('@Url.Action("GetActiveUsers", "Home")');
                const usernames = await response.json();

                const banner = document.getElementById('usersBanner');
                const content = document.getElementById('usersBannerContent');

                if (usernames && usernames.length > 0) {
                    // Build HTML for scrolling users
                    let html = '<span class="banner-label">🟢 Active Users</span>';

                    // Duplicate usernames for seamless loop
                    const duplicatedUsers = [...usernames, ...usernames, ...usernames];

                    duplicatedUsers.forEach(username => {
                        html += `<span class="user-badge">${username}</span>`;
                    });

                    content.innerHTML = html;
                    banner.classList.remove('loading');
                } else {
                    content.innerHTML = '<span class="banner-label"> No active users found</span>';
                }
            } catch (error) {
                console.error('Error loading active users:', error);
                document.getElementById('usersBannerContent').innerHTML =
                    '<span class="banner-label"> Failed to load users</span>';
            }
        }

        // Load users when page loads
        document.addEventListener('DOMContentLoaded', loadActiveUsers);

        // Refresh every 5 minutes (same as cache expiration)
        setInterval(loadActiveUsers, 5 * 60 * 1000);
    </script>
</body>
</html>
