@{
    ViewData["Title"] = "Registration Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body">
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle text-success" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                        </svg>
                    </div>

                    <h2 class="text-success mb-3">Registration Successful!</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <p class="lead">@TempData["SuccessMessage"]</p>
                    }

                    <p class="mb-4">Welcome, <strong>@ViewBag.Username</strong>!</p>

                    <div class="alert alert-info">
                        <p class="mb-0">
                            <strong>Email:</strong> @ViewBag.Email
                        </p>
                        <p class="mb-0 mt-2">
                            Your account has been saved to the database.
                        </p>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="User" asp-action="Register" class="btn btn-primary">
                            Register Another User
                        </a>
                        <a asp-controller="UserManagement" asp-action="List" class="btn btn-secondary">
                            View All Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>