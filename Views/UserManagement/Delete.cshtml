@model ValidationDemo.Models.UserEntity

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete User Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this user?
                        </h5>
                        <hr>
                        <p class="mb-0">
                            This action will mark the user as inactive. The user will no longer appear in the active users list,
                            but the data will be preserved and can be restored later if needed.
                        </p>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">User Details</h5>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>User ID:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Id
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Username:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Username
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Email:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Email
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Age:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Age years old
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Phone Number:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.PhoneNumber
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Registration Date:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-controller="UserManagement" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete User
                            </button>
                            <a asp-controller="UserManagement" asp-action="List" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>