@model ValidationDemo.Models.UserEntity

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">My Profile</h3>

                    @if (ViewBag.PageVisitTime != null)
                    {
                        <span class="badge bg-light text-dark">
                            Visited: @ViewBag.PageVisitTime?.ToString("hh:mm:ss tt")
                        </span>
                    }
                </div>

                <div class="card-body">
                    @* User ID *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>User ID:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Id
                        </div>
                    </div>

                    @* Username *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Username:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Username
                        </div>
                    </div>

                    @* Email *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>

                    @* Age *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Age:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Age years old
                        </div>
                    </div>

                    @* Phone Number *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Phone Number:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.PhoneNumber
                        </div>
                    </div>

                    @* Country *@
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Country:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Country
                        </div>
                    </div>

                    @* Member Since *@
                    <div class="row mb-0">
                        <div class="col-md-4">
                            <strong>Member Since:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-controller="User"
                       asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>

                    <a asp-controller="Home"
                       asp-action="Dashboard"
                       class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
