@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Welcome to Dashboard</h3>
                </div>

                <div class="card-body">
                    @* Success message *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="alert"
                                    aria-label="Close">
                            </button>
                        </div>
                    }

                    @* User info + page visit time *@
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>Hello, @ViewBag.Username!</h4>
                            <p class="text-muted mb-0">Email: @ViewBag.Email</p>
                        </div>

                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <div class="alert alert-info mb-0">
                                <strong>Page Visit Time:</strong><br />
                                @ViewBag.PageVisitTime?.ToString("MMM dd, yyyy hh:mm:ss tt")

                                @if (ViewBag.IsCachedTime)
                                {
                                    <br />
                                    <span class="badge bg-warning text-dark mt-2">
                                        Cached (2 min)
                                    </span>
                                }
                                else
                                {
                                    <br />
                                    <span class="badge bg-success mt-2">
                                        Fresh
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    @* Cache info *@
                    <div class="alert alert-info">
                        <h5 class="mb-2">
                            <i class="bi bi-info-circle"></i> About Page Visit Time Cache
                        </h5>
                        <p class="mb-0">
                            The visit time shown above is cached for <strong>2 minutes</strong>.
                            If you refresh this page within 2 minutes, you'll see the same time.
                            After 2 minutes, a new time will be recorded.
                        </p>
                    </div>

                    @* Action cards *@
                    <div class="row mt-4 g-3">
                        <div class="col-md-4">
                            <div class="card text-center border-primary h-100">
                                <div class="card-body">
                                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                                    <h5 class="card-title mt-3">Profile</h5>
                                    <p class="card-text">View and edit your profile information.</p>
                                    <a asp-controller="Home"
                                       asp-action="Profile"
                                       class="btn btn-primary">
                                        View Profile
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card text-center border-success h-100">
                                <div class="card-body">
                                    <i class="bi bi-people-fill" style="font-size: 3rem; color: #198754;"></i>
                                    <h5 class="card-title mt-3">Users</h5>
                                    <p class="card-text">Manage all registered users.</p>
                                    <a asp-controller="UserManagement"
                                       asp-action="List"
                                       class="btn btn-success">
                                        View Users
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card text-center border-warning h-100">
                                <div class="card-body">
                                    <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #ffc107;"></i>
                                    <h5 class="card-title mt-3">Register</h5>
                                    <p class="card-text">Add new users to the system.</p>
                                    <a asp-controller="User"
                                       asp-action="Register"
                                       class="btn btn-warning">
                                        Register User
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Protected area info *@
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="mb-2">
                                        <i class="bi bi-shield-check"></i> Protected Area
                                    </h5>
                                    <p class="mb-0">
                                        This dashboard is protected by our <strong>CustomAuthorizeFilter</strong>.
                                        Only authenticated users can access this page. Try logging out and
                                        accessing this page directly – you'll be redirected to the login page!
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div> @* card-body *@
            </div> @* card *@
        </div>
    </div>
</div>
